<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="card-title mb-4">Detalles del Libro</h1>
        <div class="row">
            <div class="col-md-8">
                <p><strong>ID:</strong> {{libro.idLibro}}</p>
                <p><strong>Código:</strong> {{libro.Codigo}}</p>
                <p><strong>Título:</strong> {{libro.titulo}}</p>
                <p><strong>Autores:</strong> {{libro.AutoresNombres}}</p>
                <p><strong>ISBN:</strong> {{libro.ISBN}}</p>
                <p><strong>Editorial:</strong> {{libro.Editorial}}</p>
                <p><strong>Número de Páginas:</strong> {{libro.NumeroDePaginas}}</p>
            </div>
            <div class="col-md-4">
                {{#if libro.Imagen}}
                    <img src="/uploads/{{libro.Imagen}}" alt="Portada del libro" class="img-fluid rounded">
                {{else}}
                    <div class="text-center p-4 bg-light rounded">
                        <i class="bi bi-book" style="font-size: 5rem;"></i>
                        <p class="mt-2">Imagen no disponible</p>
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="mt-4">
            <a href="/libros" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
            <a href="/libros/edit/{{libro.idLibro}}" class="btn btn-secondary">
                <i class="bi bi-pencil"></i> Editar
            </a>
        </div>
    </div>
</div>